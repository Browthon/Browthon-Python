QWidget {
    background-color: #c01e1e;
    border-color: #c01e1e;
}

QMenuBar {
    background-color: #c01e1e;
}

QMenuBar::item {
    color: #f5f5f5;
}

QMainWindow {
    background-color: #c01e1e;
}

QPushButton {
    background-color: #d72020;
    color: #f5f5f5;
}

QLineEdit {
    background-color: #d72020;
    color: #f5f5f5;
}

QLabel {
    color: #f5f5f5;
}

QMenu {
    background-color: #c01e1e; /* sets background of the menu */
    border: 1px solid black;
}

QMenu::item {
    color: #f5f5f5;
}

QTabWidget::pane { 
    border-top: 2px solid #C2C7CB;
}

QTabWidget::tab-bar {
    left: 5px; 
}

QTabBar::tab {
    background: #d72020;
    border: 2px solid #c01e1e;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    min-width: 8ex;
    padding: 2px;
    color: #f5f5f5;
}

QTabBar::tab:hover {
    background: #e42323;
}

QTabBar::tab:selected {
    background: #e42323;
}

QTabBar::tab:!selected {
    margin-top: 2px; 
    background: #d72020; 
}